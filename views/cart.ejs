<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Your Cart</title>
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 font-sans text-gray-900">
    <!-- Navbar -->
  <header class="sticky top-0 bg-white z-50 shadow">
  <div class="max-w-7xl mx-auto flex items-center justify-between px-4 py-3 md:py-4">
    <!-- Logo -->
    <div class="flex items-center space-x-2">
      <img src="../img/logo.jpeg" alt="Logo" class="h-20" style="border-radius: 50%" />
      <div class="text-xl font-bold text-gray-600 hidden sm:block">
        Rampur Gold Tea
      </div>
    </div>

    <!-- Desktop Menu -->
    <nav class="hidden md:flex items-center space-x-6 font-medium text-gray-700">
      <ul class="flex space-x-6">
        <li><a href="./index.html" class="hover:text-green-700">Home</a></li>
        <li><a href="./about" class="hover:text-green-700">About Us</a></li>
        <!-- <li><a href="./product" class="hover:text-green-700">Our Product</a></li> -->
        <li><a href="./contact" class="hover:text-green-700">Contact Us</a></li>
        <li><a href="./gallery" class="hover:text-green-700">Gallery</a></li>
      </ul>

      <!-- Cart and Logout Links -->
      <div class="flex items-center space-x-4">
        <!-- Cart Icon with Count -->
        <a href="/cart" class="flex items-center hover:text-green-700 relative">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" 
              d="M3 3h18l-1.5 9h-15l-1.5-9zM6 14h12M10 20h4" />
          </svg>
          Cart
          <% if (cartItemCount > 0) { %>
            <span class="absolute top-0 right-0 bg-red-600 text-white text-xs rounded-full px-2 py-1">
              <%= cartItemCount %>
            </span>
          <% } %>
        </a>
        
        <!-- Logout or Login Links -->
        <% if (isLoggedIn) { %>
          <a href="/logout" class="hover:text-green-700">Logout</a>
        <% } else { %>
          <a href="/login" class="hover:text-green-700">Login</a>
          <a href="/register" class="hover:text-green-700">Register</a>
        <% } %>
      </div>
    </nav>

    <!-- Mobile Menu Button -->
    <div class="md:hidden">
      <button id="menu-btn" class="text-gray-700 focus:outline-none">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden md:hidden px-4 pb-4 space-y-2 font-medium text-gray-700">
    <ul class="space-y-2">
      <li><a href="/" class="hover:text-green-700">Home</a></li>
      <li><a href="/about" class="hover:text-green-700">About Us</a></li>
      <!-- <li><a href="/product" class="hover:text-green-700">Our Product</a></li> -->
      <li><a href="/contact" class="hover:text-green-700">Contact Us</a></li>
      <li><a href="/gallery" class="hover:text-green-700">Gallery</a></li>
    </ul>

    <!-- Cart and Logout in Mobile -->
    <ul class="flex flex-col items-start">
      <li class="flex items-center space-x-4">
        <a href="/cart" class="flex items-center hover:text-green-700 relative">
          <svg class="w-6 h-6 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
              d="M3 3h18l-1.5 9h-15l-1.5-9zM6 14h12M10 20h4" />
          </svg>
          Cart
          <% if (cartItemCount > 0) { %>
            <span class="absolute top-0 right-0 bg-red-600 text-white text-xs rounded-full px-2 py-1">
              <%= cartItemCount %>
            </span>
          <% } %>
        </a>
      </li>

      <% if (isLoggedIn) { %>
        <a href="/logout" class="hover:text-green-700">Logout</a>
      <% } else { %>
        <a href="/login" class="hover:text-green-700">Login</a>
        <a href="/register" class="hover:text-green-700">Register</a>
      <% } %>
    </ul>
  </div>
</header>

<!-- Mobile Menu Toggle Script -->
<script>
  const menuBtn = document.getElementById("menu-btn");
  const mobileMenu = document.getElementById("mobile-menu");

  menuBtn.addEventListener("click", function() {
    mobileMenu.classList.toggle("hidden");
  });
</script>
  <!-- Container -->
  <div class="max-w-7xl mx-auto px-4 py-8">

    <!-- Header -->
    <!-- <div class="flex items-center justify-between border-b pb-4 mb-6">
      <h2 class="text-3xl font-bold text-gray-800">Shopping Cart</h2>
      <div>
        <a href="/products" class="text-sm text-blue-600 hover:text-blue-700 font-medium mr-6">Continue Shopping</a>
        <a href="/logout" class="text-sm text-red-600 hover:text-red-700 font-medium">Logout</a>
      </div>
    </div> -->

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">

      <!-- Cart Items -->
      <div class="lg:col-span-2 bg-white rounded-lg shadow-md p-6">
        <% if (cart && cart.items && cart.items.length > 0) { %>
          <ul class="divide-y divide-gray-200">
            <% cart.items.forEach(item => { %>
              <li class="flex items-center justify-between py-6">
                
                <!-- Product Info -->
                <div class="flex items-center space-x-4">
                  <img src="<%= item.productId.img %>" 
                       alt="<%= item.productId.name %>" 
                       class="w-24 h-24 object-cover rounded-md border" />
                  <div>
                    <p class="text-lg font-semibold text-gray-800"><%= item.productId.name %></p>
                    <p class="text-sm text-gray-500">Price: ₹<%= item.productId.price %></p>

                    <!-- Quantity Controls -->
                    <div class="flex items-center mt-2 space-x-2">
                      <!-- Decrease -->
                      <form action="/cart/decrease/<%= item.productId._id %>" method="POST">
                        <button type="submit" class="px-2 py-1 border rounded hover:bg-gray-100">-</button>
                      </form>

                      <span class="px-3 py-1 border rounded bg-gray-50"><%= item.quantity %></span>

                      <!-- Increase -->
                      <form action="/cart/increase/<%= item.productId._id %>" method="POST">
                        <button type="submit" class="px-2 py-1 border rounded hover:bg-gray-100">+</button>
                      </form>
                    </div>

                    <!-- Remove Button -->
                    <form action="/cart/remove/<%= item.productId._id %>" method="POST">
                      <button type="submit" class="mt-2 text-sm text-red-600 hover:text-red-800">Remove</button>
                    </form>
                  </div>
                </div>

                <!-- Item Total -->
                <div class="text-lg font-medium text-gray-800">
                  ₹<%= item.productId.price * item.quantity %>
                </div>
              </li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-gray-700 text-center py-10">Your cart is empty</p>
        <% } %>
      </div>

      <!-- Order Summary -->
      <div class="bg-white rounded-lg shadow-md p-6 h-fit">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Order Summary</h3>

        <% if (cart && cart.items && cart.items.length > 0) { %>
          <div class="flex justify-between text-base mb-2">
            <p>Subtotal</p>
            <p>₹<%= totalPrice %></p>
          </div>
          <div class="flex justify-between text-base mb-2">
            <p>Shipping</p>
            <p class="text-green-600">Free</p>
          </div>
          <div class="flex justify-between font-semibold text-lg border-t pt-3 mt-3">
            <p>Total</p>
            <p class="text-green-600">₹<%= totalPrice %></p>
          </div>

          <!-- Checkout Button -->
          <a href="/checkout" 
             class="mt-6 block w-full text-center py-3 bg-green-600 text-white font-semibold rounded-lg hover:bg-green-700 transition">
            Proceed to Checkout
          </a>
        <% } else { %>
          <p class="text-gray-700">No items in cart</p>
        <% } %>
      </div>

    </div>
  </div>
